# Used by FastAPI and Alembic
DATABASE_URL="postgresql://user:password@localhost:5432/progresstracker_db"

# Used by Docker (future step)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=progresstracker_db

# JWT Authentication Configuration
# IMPORTANT: Change SECRET_KEY in production! Generate with: openssl rand -hex 32
SECRET_KEY="your-secret-key-change-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
